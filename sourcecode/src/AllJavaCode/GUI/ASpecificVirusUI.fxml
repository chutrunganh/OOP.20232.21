<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AllJavaCode.GUI.ASpecificVirusController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About us" />
                  <MenuItem mnemonicParsing="false" text="How to use this app" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <ImageView fitHeight="44.0" fitWidth="45.0" layoutX="14.0" layoutY="516.0" onMouseClicked="#backToHomeClicked" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@ImageAndVideo/home-button.png" />
               </image>
            </ImageView>
            <TabPane layoutX="6.0" prefHeight="510.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Structure">
                     <content>
                        <BorderPane prefHeight="600.0" prefWidth="600.0">
                           <right>
                              <ImageView fx:id="virusImage" fitHeight="143.0" fitWidth="167.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                                 <BorderPane.margin>
                                    <Insets right="30.0" />
                                 </BorderPane.margin>
                              </ImageView>
                           </right>
                           <center>
                              <TextArea fx:id="taVirusInfo" prefHeight="486.0" prefWidth="748.0" BorderPane.alignment="CENTER">
                                 <BorderPane.margin>
                                    <Insets left="10.0" top="5.0" />
                                 </BorderPane.margin>
                              </TextArea>
                           </center>
                        </BorderPane>
                     </content>
                </Tab>
                <Tab text="Infect Mechanism">
                     <content>
                        <AnchorPane prefHeight="318.0" prefWidth="635.0">
                           <children>
                              <TextArea fx:id="taVirusInfectMechanism" layoutX="-5.0" prefHeight="60.0" prefWidth="900.0" />
                              <MediaView fx:id="mediaView" fitHeight="400.0" fitWidth="720.0" layoutY="60.0" />
                              <Button fx:id="replayButton" layoutX="780.0" layoutY="374.0" mnemonicParsing="false" onAction="#replayMedia" text="Replay" />
                              <Button fx:id="playButton" layoutX="787.0" layoutY="119.0" mnemonicParsing="false" onAction="#playMedia" text="Play" />
                              <Button fx:id="pauseButton" layoutX="782.0" layoutY="247.0" mnemonicParsing="false" onAction="#pauseMedia" text="Pause" />
                           </children>
                        </AnchorPane>
                     </content></Tab>
              </tabs>
            </TabPane>
         </children>
    </AnchorPane>
  </children>
</VBox>
