<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <ImageView fx:id="homeButton" fitHeight="40.0" fitWidth="40.0" layoutX="10.0" layoutY="450.0" onMouseClicked="#homeButtonClicked" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@image/home-button.png" />
               </image>
            </ImageView>
            <TabPane prefHeight="440.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Structure">
                     <content>
                        <BorderPane prefHeight="265.0" prefWidth="634.0">
                           <right>
                              <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <ImageView fx:id="virusImage" fitHeight="236.0" fitWidth="200.0" layoutY="53.0" pickOnBounds="true" preserveRatio="true" />
                                 </children>
                                 <BorderPane.margin>
                                    <Insets right="20.0" />
                                 </BorderPane.margin>
                              </AnchorPane>
                           </right>
                           <center>
                              <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <TextArea fx:id="virusDetails" editable="false" layoutX="40.0" layoutY="40.0" prefHeight="315.0" prefWidth="515.0" wrapText="true" />
                                 </children>
                              </AnchorPane>
                           </center>
                        </BorderPane>
                     </content>
                </Tab>
                <Tab text="Infect Mechanism">
                     <content>
                        <AnchorPane prefHeight="411.0" prefWidth="680.0">
                           <children>
                              <TextArea fx:id="infectionDetails" editable="false" layoutX="14.0" layoutY="10.0" prefHeight="382.0" prefWidth="238.0" wrapText="true" />
                              <MediaView fx:id="infectionVideo" fitHeight="340.0" fitWidth="500.0" layoutX="271.0" layoutY="10.0" />
                              <ButtonBar layoutX="376.0" layoutY="357.0" prefHeight="40.0" prefWidth="200.0">
                                <buttons>
                                    <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#playButtonClicked" prefHeight="40.0" prefWidth="64.0" text="▶">
                                       <font>
                                          <Font size="22.0" />
                                       </font>
                                    </Button>
                                    <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#pauseButtonClicked" prefHeight="40.0" prefWidth="64.0" text="▐▐">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Button>
                                    <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#replayButtonClicked" prefHeight="40.0" prefWidth="64.0" text="↺">
                                       <font>
                                          <Font name="System Bold" size="22.0" />
                                       </font>
                                    </Button>
                                </buttons>
                              </ButtonBar>
                           </children>
                        </AnchorPane>
                     </content></Tab>
              </tabs>
            </TabPane>
            <Button fx:id="helpButton" layoutX="726.0" layoutY="450.0" mnemonicParsing="false" onMouseClicked="#helpButtonClicked" prefHeight="40.0" prefWidth="64.0" text="Help">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
    </AnchorPane>
  </children>
</VBox>
